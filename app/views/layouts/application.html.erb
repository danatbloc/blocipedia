<!DOCTYPE html>
<html>
  <head>
    <title>Blocipedia</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <nav>
    <li><%= link_to "Home", "/" %></li>
    <% if user_signed_in? %>
      <li><%= link_to 'Edit profile', edit_user_registration_path %> -
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete  %></li>
      Signed in as: <strong><%= current_user.name %> - <%= current_user.email %></strong>
    <% else %>
      <li><%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %> -
      <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %></li>
    <% end %>
  </nav>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <body>
    <%= yield %>
  </body>
</html>
