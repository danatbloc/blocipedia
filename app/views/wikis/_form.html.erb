<%= form_for wiki do |f| %>

  <% if wiki.errors.any? %>
    <div>
      <h4><%= pluralize(wiki.errors.count, "error") %>.</h4>
      <ul>
        <% wiki.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title", class:"text_field" %>
  </div><br>

  <div class="form-group edit_wiki_body">
    <%= f.label :body %><br>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body", class:"text_area" %>
  </div>

  <% if user_can_privatize_the_wiki?(wiki) %>
    <div class="form-group">
      <%= f.check_box :private %>
      <%= f.label :private %>
    </div>
  <% end %>

  <br>
  <div class="form-group">
    <%= f.submit "Save", class:"submit_button" %>
  </div>

<% end %>
